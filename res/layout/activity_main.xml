<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/rl_setting"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@drawable/bg_1">
	    <TextView
		    android:id="@+id/tv_setting_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Settings" />
		<Button
	        android:id="@+id/btn_setting_back"
	        android:layout_width="28dp"
	        android:layout_height="28dp"
	        android:background="@drawable/btn_back" />
		<Button
	        android:id="@+id/btn_setting_tab1"
	        android:layout_width="28dp"
	        android:layout_height="28dp"
	        android:background="@drawable/btn_item_back" />
		<Button
	        android:id="@+id/btn_setting_tab1_icon"
	        android:layout_width="28dp"
	        android:layout_height="28dp"
	        android:background="@drawable/btn_item_first" />
		<Button
	        android:id="@+id/btn_setting_tab2"
	        android:layout_width="28dp"
	        android:layout_height="28dp"
	        android:background="@android:color/transparent" />
		<Button
	        android:id="@+id/btn_setting_tab2_icon"
	        android:layout_width="28dp"
	        android:layout_height="28dp"
	        android:background="@drawable/btn_item_second" />
		<ImageView
	        android:id="@+id/iv_setting_seperater"
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:src="@drawable/dash_item_separate" />
		<ImageView
	        android:id="@+id/iv_setting_shart"
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:src="@drawable/shart_line" />
		<ImageView
	        android:id="@+id/iv_setting_bg"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/bg" />
			        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_main"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@drawable/bg_1">
	    
	    <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:layout_below="@+id/imageView1"
	        android:background="@drawable/shart_line"
	        android:src="@drawable/ic_launcher" />
	
	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="90dp"
	        android:layout_height="74dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="18dp"
	        android:maxWidth="100dp"
	        android:src="@drawable/app_logo" />
	
	    <Button
	        android:id="@+id/button1"
	        android:layout_width="28dp"
	        android:layout_height="28dp"
	        android:layout_alignBottom="@+id/imageView1"
	        android:layout_marginBottom="14dp"
	        android:layout_marginLeft="38dp"
	        android:layout_toRightOf="@+id/imageView1"
	        android:background="@drawable/btn_totalsong" />
	
	    <Button
	        android:id="@+id/button2"
	        android:layout_width="100dp"
	        android:layout_height="25dp"
	        android:layout_alignBaseline="@+id/button1"
	        android:layout_alignBottom="@+id/button1"
	        android:layout_toRightOf="@+id/button1"
	        android:background="@android:color/transparent"
	        android:text="Toate cantecele"
	        android:textColor="#fff"
	        android:textSize="12sp" />
	
	    <Button
	        android:id="@+id/Button01"
	        android:layout_width="28dp"
	        android:layout_height="28dp"
	        android:layout_alignBottom="@+id/button2"
	        android:layout_marginLeft="15dp"
	        android:layout_toRightOf="@+id/button2"
	        android:background="@drawable/btn_mysong" />
	
	    <Button
	        android:id="@+id/Button02"
	        android:layout_width="100dp"
	        android:layout_height="25dp"
	        android:layout_alignBaseline="@+id/Button01"
	        android:layout_alignBottom="@+id/Button01"
	        android:layout_toRightOf="@+id/Button01"
	        android:background="@android:color/transparent"
	        android:text="Cantecele mele"
	        android:textColor="#fff"
	        android:textSize="12sp" />
	
	    <Button
	        android:id="@+id/Button03"
	        android:layout_width="18dp"
	        android:layout_height="18dp"
	        android:layout_alignBottom="@+id/Button01"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="14dp"
	        android:background="@drawable/btn_setting" />
	
	    <ImageView
	        android:id="@+id/imageView3"
	        android:layout_width="120dp"
	        android:layout_height="20dp"
	        android:layout_above="@+id/Button01"
	        android:layout_alignRight="@+id/Button03"
	        android:src="@drawable/search_bg" />
	
	    <EditText
	        android:id="@+id/editText1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView3"
	        android:layout_alignParentRight="true"
	        android:background="@android:color/transparent"
	        android:ems="10"
	        android:hint="Cauta meledie"
	        android:textSize="10sp" />
	
	    <Button
	        android:id="@+id/Button04"
	        android:layout_width="16dp"
	        android:layout_height="14dp"
	        android:layout_alignBaseline="@+id/editText1"
	        android:layout_alignBottom="@+id/editText1"
	        android:layout_alignRight="@+id/imageView3"
	        android:background="@drawable/search_cancel" />
	
	    <HorizontalScrollView
	        android:id="@+id/horizontalScrollView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/imageView2" >
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="horizontal" >
	        </LinearLayout>
	    </HorizontalScrollView>
	</RelativeLayout>
    
</RelativeLayout>
