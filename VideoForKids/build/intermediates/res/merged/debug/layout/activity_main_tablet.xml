<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_1" >

        <ImageView
            android:id="@+id/iv_aaaaa"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/iv_cancel"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shart_line"
            android:src="@drawable/ic_launcher"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/app_logo" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView1"
            android:paddingBottom="16dp"
            android:paddingTop="18dp" >

            <LinearLayout
                android:id="@+id/ll_main_tb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/iv_search_back"
            android:layout_width="260dp"
            android:layout_height="36dp"
            android:layout_alignRight="@+id/btn_main_setting"
            android:layout_alignTop="@+id/iv_cancel"
            android:layout_marginTop="50dp"
            android:src="@drawable/search_bg" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_search_back"
            android:layout_alignLeft="@+id/iv_search_back"
            android:layout_alignTop="@+id/iv_search_back"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/btn_search_cancel"
            android:background="@android:color/transparent"
            android:hint="Cauta meledie"
            android:paddingLeft="7dp"
            android:textColorHint="#ddd"
            android:textSize="18sp"
            android:singleLine="true" >
            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/iv_aaaaa"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="false"
            android:background="@drawable/bg_part"
            android:scaleType="centerInside" />

        <Button
            android:id="@+id/btn_main_total_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignLeft="@+id/iv_cancel"
            android:layout_alignTop="@+id/imageView1"
            android:background="@drawable/btn_totalsong_selected" />

        <Button
            android:id="@+id/btn_main_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_main_total_icon"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/btn_main_total_icon"
            android:background="@android:color/transparent"
            android:text="Toate cantecele"
            android:textColor="#fff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_main_some"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_main_some_icon"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/btn_main_some_icon"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|center_horizontal|left"
            android:text="Cantecele mele"
            android:textColor="#fff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_main_some_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignTop="@+id/imageView1"
            android:layout_marginLeft="42dp"
            android:layout_toRightOf="@+id/btn_main_total"
            android:background="@drawable/btn_mysong" />

        <Button
            android:id="@+id/btn_main_setting"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/btn_main_some_icon"
            android:layout_alignBottom="@+id/btn_main_some_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_setting" />

        <Button
            android:id="@+id/btn_search_cancel"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_alignRight="@+id/iv_search_back"
            android:layout_alignTop="@+id/iv_search_back"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/search_cancel"
            android:visibility="invisible" />
    </RelativeLayout>
   
</RelativeLayout>
