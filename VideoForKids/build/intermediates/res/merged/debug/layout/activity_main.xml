<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_1" >

        <ImageView
            android:id="@+id/iv_aaaaa"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/iv_cancel"
            android:background="@drawable/shart_line" />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="100dp"
            android:layout_height="84dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/app_logo" />

        <Button
            android:id="@+id/btn_main_total_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignBottom="@+id/iv_cancel"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iv_cancel"
            android:background="@drawable/btn_totalsong_selected" />

        <Button
            android:id="@+id/btn_main_total"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/btn_main_total_icon"
            android:layout_alignBottom="@+id/btn_main_total_icon"
            android:layout_marginLeft="-10dp"
            android:layout_toRightOf="@+id/btn_main_total_icon"
            android:background="@android:color/transparent"
            android:text="Toate cantecele"
            android:textColor="#fff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_main_some_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignBottom="@+id/btn_main_total"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_main_total"
            android:background="@drawable/btn_mysong" />

        <Button
            android:id="@+id/btn_main_some"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/btn_main_some_icon"
            android:layout_alignBottom="@+id/btn_main_some_icon"
            android:layout_marginLeft="-10dp"
            android:layout_toRightOf="@+id/btn_main_some_icon"
            android:background="@android:color/transparent"
            android:text="Cantecele mele"
            android:textColor="#fff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_main_setting"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignBaseline="@+id/btn_main_some_icon"
            android:layout_alignBottom="@+id/btn_main_some_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/btn_setting" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_aaaaa"
            android:paddingBottom="12dp"
            android:paddingTop="13dp" >

            <LinearLayout
                android:id="@+id/ll_main_tb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/iv_search_back"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:layout_alignRight="@+id/btn_main_setting"
            android:layout_alignTop="@+id/iv_cancel"
            android:layout_marginTop="10dp"
            android:src="@drawable/search_bg" />

        <Button
            android:id="@+id/btn_search_cancel"
            android:layout_width="18dp"
            android:layout_height="16dp"
            android:layout_alignRight="@+id/iv_search_back"
            android:layout_alignTop="@+id/iv_search_back"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/search_cancel"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" >
        </LinearLayout>

        <EditText
            android:id="@+id/et_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_search_back"
            android:layout_alignLeft="@+id/iv_search_back"
            android:layout_alignTop="@+id/iv_search_back"
            android:layout_toLeftOf="@+id/btn_search_cancel"
            android:background="@android:color/transparent"
            android:hint="Cauta meledie"
            android:paddingLeft="7dp"
            android:textColorHint="#ddd"
            android:textSize="12sp" 
            android:singleLine="true" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/bt_cover_total"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_above="@+id/iv_aaaaa"
            android:layout_toLeftOf="@+id/btn_main_some_icon"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/bt_cover_some"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/btn_main_some_icon"
            android:layout_alignBottom="@+id/btn_main_some_icon"
            android:layout_alignRight="@+id/btn_main_some"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/bt_cover_setting"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_search_back"
            android:background="@android:color/transparent" />
    </RelativeLayout>
   
</RelativeLayout>
