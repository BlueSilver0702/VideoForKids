<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bk"
    android:paddingBottom="12dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="12dp" >

    <TextView
        android:id="@+id/tv_video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Confirm you are an adult"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_random_calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_video_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="How much is 2 + 5 ?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/et_answer"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_below="@+id/tv_random_calc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/frield_bg"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="13sp" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/et_answer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" 
        android:weightSum="2">
	
	    <ImageView
	        android:id="@+id/iv_cancel"
	        android:layout_width="120dp"
	        android:layout_height="25dp"
	        android:layout_below="@+id/et_answer"
	        android:layout_centerHorizontal="true"
	        android:src="@drawable/btn_cancel" />
	        
	    <ImageView
		    android:id="@+id/iv_ok"
		    android:layout_width="120dp"
		    android:layout_height="25dp"
		    android:layout_below="@+id/et_answer"
		    android:layout_centerHorizontal="true"
		    android:maxWidth="120dp"
		    android:src="@drawable/btn_ok" />
    </LinearLayout>

</RelativeLayout>