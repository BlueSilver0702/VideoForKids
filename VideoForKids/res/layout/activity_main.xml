<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
<ViewFlipper
		android:id="@+id/viewFlipper" 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_1" >
	    
	    <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="fill_parent"
	        android:layout_height="2dp"
	        android:layout_below="@+id/imageView1"
	        android:background="@drawable/shart_line"
	        android:src="@drawable/ic_launcher" />
	
	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="100dp"
	        android:layout_height="84dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="15dp"
	        android:layout_marginTop="8dp"
	        android:src="@drawable/app_logo" />
	
	    <Button
	        android:id="@+id/btn_main_total_icon"
	        android:layout_width="34dp"
	        android:layout_height="34dp"
	        android:layout_alignBottom="@+id/imageView1"
	        android:layout_marginBottom="3dp"
	        android:layout_marginLeft="20dp"
	        android:layout_toRightOf="@+id/imageView1"
	        android:background="@drawable/btn_totalsong_selected" />
	
	    <Button
	        android:id="@+id/btn_main_total"
	        android:layout_width="120dp"
	        android:layout_height="25dp"
	        android:layout_alignBaseline="@+id/btn_main_total_icon"
	        android:layout_alignBottom="@+id/btn_main_total_icon"
	        android:layout_marginLeft="-10dp"
	        android:layout_toRightOf="@+id/btn_main_total_icon"
	        android:background="@android:color/transparent"
	        android:text="Toate cantecele"
	        android:textColor="#fff"
	        android:textSize="14sp" />
	
	    <Button
	        android:id="@+id/btn_main_some_icon"
	        android:layout_width="34dp"
	        android:layout_height="34dp"
	        android:layout_alignBottom="@+id/btn_main_total"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/btn_main_total"
	        android:background="@drawable/btn_mysong" />
	
	    <Button
	        android:id="@+id/btn_main_some"
	        android:layout_width="120dp"
	        android:layout_height="25dp"
	        android:layout_alignBaseline="@+id/btn_main_some_icon"
	        android:layout_alignBottom="@+id/btn_main_some_icon"
	        android:layout_marginLeft="-10dp"
	        android:layout_toRightOf="@+id/btn_main_some_icon"
	        android:background="@android:color/transparent"
	        android:text="Cantecele mele"
	        android:textColor="#fff"
	        android:textSize="14sp" />
	
	    <Button
	        android:id="@+id/btn_main_setting"
	        android:layout_width="21dp"
	        android:layout_height="21dp"
	        android:layout_alignBaseline="@+id/btn_main_some_icon"
	        android:layout_alignBottom="@+id/btn_main_some_icon"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="14dp"
	        android:background="@drawable/btn_setting" />
	
	    <HorizontalScrollView
	        android:id="@+id/horizontalScrollView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/imageView2"
	        android:padding="15dp" >
	
	        <LinearLayout
	        	android:id="@+id/ll_main_tb"    
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:orientation="horizontal" >

	            
	        </LinearLayout>
	    </HorizontalScrollView>

	    <ImageView
	        android:id="@+id/imageView3"
	        android:layout_width="140dp"
	        android:layout_height="25dp"
	        android:layout_alignRight="@+id/btn_main_setting"
	        android:layout_alignTop="@+id/imageView1"
	        android:layout_marginTop="10dp"
	        android:src="@drawable/search_bg" />

	    <Button
	        android:id="@+id/btn_search_cancel"
	        android:layout_width="18dp"
	        android:layout_height="16dp"
	        android:layout_alignRight="@+id/imageView3"
	        android:layout_alignTop="@+id/imageView3"
	        android:layout_marginRight="2dp"
	        android:layout_marginTop="5dp"
	        android:background="@drawable/search_cancel"
	        android:visibility="invisible" />
	    
	    <LinearLayout android:focusable="true"
                android:focusableInTouchMode="true" android:layout_width="0px"
                android:layout_height="0px" />
	    <EditText
	        android:id="@+id/et_search"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView3"
	        android:layout_alignLeft="@+id/imageView3"
	        android:layout_alignTop="@+id/imageView3"
	        android:layout_toLeftOf="@+id/btn_search_cancel"
	        android:background="@android:color/transparent"
	        android:hint="Cauta meledie"
	        android:paddingLeft="7dp"
	        android:textSize="12sp" />

	</RelativeLayout> 
    <RelativeLayout
        android:id="@+id/rl_setting"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@drawable/bg_1">
		<Button
	        android:id="@+id/btn_setting_back"
	        android:layout_width="32dp"
	        android:layout_height="25dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="16dp"
	        android:background="@drawable/btn_back" />

		<Button
		    android:id="@+id/btn_setting_tab1"
		    android:layout_width="65dp"
		    android:layout_height="45dp"
		    android:layout_alignParentLeft="true"
		    android:layout_alignTop="@+id/iv_setting_shart"
		    android:layout_marginTop="8dp"
		    android:background="@drawable/bg" />

		<Button
	        android:id="@+id/btn_setting_tab1_icon"
	        android:layout_width="18dp"
	        android:layout_height="18dp"
	        android:layout_alignTop="@+id/btn_setting_tab1"
	        android:layout_marginTop="14dp"
	        android:layout_marginLeft="24dp"
	        android:background="@drawable/btn_item_first" />
		<Button
	        android:id="@+id/btn_setting_tab2"
	        android:layout_width="65dp"
	        android:layout_height="45dp"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/btn_setting_tab1"
	        android:background="@android:color/transparent" />
		<Button
	        android:id="@+id/btn_setting_tab2_icon"
	        android:layout_width="18dp"
	        android:layout_height="18dp"
	        android:layout_alignTop="@+id/btn_setting_tab2"
	        android:layout_marginTop="14dp"
	        android:layout_marginLeft="24dp"
	        android:background="@drawable/btn_item_second" />
		<ImageView
	        android:id="@+id/iv_setting_seperater"
	        android:layout_width="65dp"
	        android:layout_height="45dp"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/btn_setting_tab1"
	        android:layout_marginTop="-1dp"
	        android:background="@drawable/dash_item_separate" />

		<ImageView
		    android:id="@+id/iv_setting_bg"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentRight="true"
		    android:layout_toRightOf="@+id/btn_setting_tab1"
		    android:layout_alignTop="@+id/btn_setting_tab1"
		    android:background="@drawable/bg" />

		<TextView
		    android:id="@+id/tv_setting_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="23dp"
		    android:text="Settings"
		    android:textSize="20sp"
		    android:textColor="#fff" />

		<ImageView
		    android:id="@+id/iv_setting_shart"
		    android:layout_width="fill_parent"
		    android:layout_height="1dp"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/tv_setting_title"
		    android:layout_marginTop="5dp"
		    android:src="@drawable/shart_line" />
		
		
		<LinearLayout
		    android:id="@+id/ll_setting_tab1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/iv_setting_bg"
		    android:layout_alignLeft="@+id/iv_setting_bg"
		    android:layout_alignRight="@+id/iv_setting_bg"
		    android:paddingLeft="20dp"
		    android:paddingTop="13dp"
		    android:visibility="invisible">
    		<ImageView
			    android:layout_width="32dp"
			    android:layout_height="32dp"
			    android:background="@drawable/setting_item1_icon" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="8dp"
               android:layout_marginTop="6dp"
               android:text="Manage Preferences"
               android:textColor="#fff"
               android:textSize="15sp" />

    	</LinearLayout>
		
		<LinearLayout
		    android:id="@+id/ll_setting_tab2"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/iv_setting_bg"
		    android:layout_alignLeft="@+id/iv_setting_bg"
		    android:layout_alignRight="@+id/iv_setting_bg"
		    android:paddingLeft="20dp"
		    android:paddingTop="13dp">
    		<ImageView
			    android:layout_width="32dp"
			    android:layout_height="32dp"
			    android:background="@drawable/setting_item2_icon" />
    		<RelativeLayout
    		    android:layout_width="wrap_content"
    		    android:layout_height="fill_parent">
    		    <TextView
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_marginLeft="8dp"
	               android:layout_marginTop="4dp"
	               android:text="Manage Videos"
	               android:textColor="#fff"
	               android:textSize="15sp" />
				<TextView
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_marginLeft="8dp"
	               android:layout_marginTop="21dp"
	               android:text="Not enough free space on your device? Delete a video you don't want anymore and restore it at any time"
	               android:textColor="#fff"
	               android:textSize="10sp" />
    		</RelativeLayout>   
    	</LinearLayout>
		
		<TableLayout
		    android:id="@+id/tbl_setting_tab1"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/ll_setting_tab1"
		    android:layout_alignLeft="@+id/iv_setting_bg"
		    android:layout_alignRight="@+id/iv_setting_bg"
		    android:layout_alignBottom="@+id/iv_setting_bg"
		    android:padding="20dp"
		    android:orientation="vertical"
		    android:weightSum="3">
      		                  		
            <TableRow
                android:weightSum="2"
                android:layout_weight="1"
                android:orientation="vertical">
               <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:paddingRight="10dp">
                    <ImageView
                        android:background="@drawable/setting_item_bg" 
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dp"
					    android:text="Background music"
					    android:textSize="12sp"
					    android:textColor="#fff" />	
					
				    <com.kyleduo.switchbutton.SwitchButton
				        android:id="@+id/sb_md1"
				        style="@style/MaterialDesignStyle"
				        android:layout_centerVertical="true"
				        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp" />
				

                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:paddingLeft="10dp">
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
					    android:background="@drawable/setting_item_bg" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dp"
					    android:text="Sound Effects"
					    android:textSize="12sp"
					    android:textColor="#fff" />
                    <com.kyleduo.switchbutton.SwitchButton
				        android:id="@+id/sb_md2"
				        style="@style/MaterialDesignStyle"
				        android:layout_centerVertical="true"
				        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp" />
                </RelativeLayout>
            </TableRow>
            <TableRow
				android:weightSum="2"
				android:layout_weight="1"
				android:paddingTop="20dp"
				android:orientation="vertical">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:paddingRight="10dp">
                    <ImageView
                        android:background="@drawable/setting_item_bg" 
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dp"
					    android:text="Subtitles"
					    android:textSize="12sp"
					    android:textColor="#fff" />
                    <com.kyleduo.switchbutton.SwitchButton
				        android:id="@+id/sb_md3"
				        style="@style/MaterialDesignStyle"
				        android:layout_centerVertical="true"
				        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:paddingLeft="10dp">
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
					    android:background="@drawable/setting_item_bg" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dp"
					    android:text="Search Field"
					    android:textSize="12sp"
					    android:textColor="#fff" />
                    <com.kyleduo.switchbutton.SwitchButton
				        android:id="@+id/sb_md4"
				        style="@style/MaterialDesignStyle"
				        android:layout_centerVertical="true"
				        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp" />
                </RelativeLayout>
            </TableRow>
            <TableRow
                android:weightSum="4"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:paddingRight="10dp">
                    <ImageView
                        android:background="@drawable/setting_item_bg" 
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dp"
					    android:text="Shufle"
					    android:textSize="12sp"
					    android:textColor="#fff" />
                    <com.kyleduo.switchbutton.SwitchButton
				        android:id="@+id/sb_md5"
				        style="@style/MaterialDesignStyle"
				        android:layout_centerVertical="true"
				        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:paddingLeft="10dp">
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
					    android:background="@drawable/setting_item_bg" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dp"
					    android:text="AutoPlay"
					    android:textSize="12sp"
					    android:textColor="#fff" />
                    <com.kyleduo.switchbutton.SwitchButton
				        android:id="@+id/sb_md6"
				        style="@style/MaterialDesignStyle"
				        android:layout_centerVertical="true"
				        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp" />
                </RelativeLayout>
            </TableRow>
        </TableLayout>
        <ScrollView
	        android:id="@+id/sv_setting"
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/ll_setting_tab2"
		    android:layout_alignLeft="@+id/iv_setting_bg"
		    android:layout_alignRight="@+id/iv_setting_bg"
		    android:layout_alignBottom="@+id/iv_setting_bg"
		    android:paddingTop="20dp"
		    android:paddingRight="20dp"
		    android:paddingBottom="0dp"
		    android:paddingLeft="20dp">
            <LinearLayout
			    android:id="@+id/tbl_setting_tab2"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:orientation="vertical">                
	            				
	        </LinearLayout>	
	    </ScrollView>
		
        		        
    </RelativeLayout>
</ViewFlipper> 
   
</RelativeLayout>
